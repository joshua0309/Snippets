<div class="slider-container">
  <div class="slider-div">
    <div class="slider-main-container">
      <section class="logos-slider">
        {% if section.blocks.size > 0 %}
          {% for block in section.blocks %}
            {% if block.type == 'slide' %}
              <div class="slide">
                <img src="{{ block.settings.image | img_url: 'master' }}" alt="">
              </div>
            {% endif %}
          {% endfor %}
        {% else %}
          <p>No logo found</p>
        {% endif %}
      </section>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Logo Slider",
    "class": "banner",
     "max_blocks": 10,
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Add H1 Here"
      }
    ],
   "blocks": [
     {
       "name": "Slide",
       "type": "slide",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         }
       ]
     }
   ],
    "presets": [
      {
        "name": "Logo Slider",
        "category": "Logo Slider"
      }
    ]
  }
{% endschema %}
